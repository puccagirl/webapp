@model IEnumerable<webapp.Models.Event>

@{
    ViewBag.Title = "Index";
}

<h2>Events</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Name of the artist")
        </th>
        <th>
            @Html.Label("Name of the event type")
        </th>
        <th>
            @Html.Label("Name of the building")
        </th>
        <th>
            Name
        </th>
        <th>
            Date
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Artist.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Event_Type.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Building.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id_event }) |
            @Html.ActionLink("Details", "Details", new { id=item.id_event }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id_event })
        </td>
    </tr>
}

</table>
