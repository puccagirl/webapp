@model IEnumerable<webapp.Models.Building>

@{
    ViewBag.Title = "Index";
}

<h2>Buildings</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("City name")
        </th>
        <th>
            @Html.Label("Name of the building")
        </th>
        <th>
            @Html.Label("Address")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.City.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.address)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id_building }) |
            @Html.ActionLink("Details", "Details", new { id=item.id_building }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id_building })
        </td>
    </tr>
}

</table>
